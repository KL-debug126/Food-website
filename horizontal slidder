<script>
    const container = document.querySelector('.scroll-container');
    
    function scrollLeft() {
        container.scrollBy({ left: -200, behavior: 'smooth' });
    }
    
    function scrollRight() {
        container.scrollBy({ left: 200, behavior: 'smooth' });
    }
</script>

